<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/utente"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignParentRight="true"
         />

    <Button
        android:id="@+id/salva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Salva" />

    <EditText
        android:id="@+id/password"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/utente"
        android:layout_weight="0.3" android:inputType="textPassword"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_weight="0.21"
        android:text="Password" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/utente"
        android:layout_alignBottom="@+id/utente"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:text="Utente" />

    <EditText
        android:id="@+id/host"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/password" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/host"
        android:layout_alignBottom="@+id/host"
        android:layout_alignParentLeft="true"
        android:text="Host" />

    <EditText
        android:id="@+id/port"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/host"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/host"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/port"
        android:layout_alignBottom="@+id/port"
        android:layout_alignRight="@+id/textView3"
        android:text="Port" />

    <EditText
        android:id="@+id/AttPort"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/port"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/port"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AttPort"
        android:layout_alignBottom="@+id/AttPort"
        android:layout_alignLeft="@+id/textView4"
        android:text="AttPort" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/salva"
        android:layout_alignParentLeft="true"
        android:text="Versione 1.0-beta2" />

</RelativeLayout>